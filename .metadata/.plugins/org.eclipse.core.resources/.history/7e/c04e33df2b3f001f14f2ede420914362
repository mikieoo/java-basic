package chapter1;

public class ControlFor {

	public static void main(String[] args) {

		// 반복문 : 특정 조건에 만족하면 지정한 코드블럭을 반복 실행하도록 하는 것
		
		// for문 : 일반저긍로 반복 횟수가 정해져 있을 때 사용하는 반복문
		// for (조건에사용할변수초기화; 조건; 조건에사용할변수변경) {반복할 코드블럭}
		
		for(int i = 1; i <= 1000; i++) {
			System.out.println(i);
		}
		
		for(int i = 1; i <= 9; i++) {
			System.out.println("4 * " + i + " = " + 4 * i );
		}
		
		String[] fruits = new String[] {"apple", "banana", "cacao"};
		for(int i = 0; i < fruits.length; i++) {
			System.out.println(fruits[i]);
		}
		
		for(int i = 0; i < fruits.length; i++) {
			fruits[i] += " add";
		}
		
		for(int i = 0; i < fruits.length; i++) {
			System.out.println(fruits[i]);
		}
		
		// forEach : 컬렉션(배열)의 각 요소를 하나씩 변수에 복사하여 사용하는 반복문
		for(String fruit : fruits) {
			System.out.println(fruit);
		}
		
		
		for(String fruit : fruits) {
			fruit += " add";
			System.out.println(fruit);
		}
		
		
	}

}
